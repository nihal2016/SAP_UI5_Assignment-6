							<Page id="productDetail" class="sapUiStdPage" backgroundDesign="List">
								<customHeader>
									<Bar>
										<contentLeft>
											<Button icon="sap-icon://home" press=".backToHome"/>
										</contentLeft>
										<contentMiddle>
											<Title level="H2" text="{Name}"/>
										</contentMiddle>
										<contentRight>
											<Button icon="sap-icon://customer" press=".onAvatarPress"/>
											<ToggleButton id="productDetailtoCart" icon="sap-icon://cart" pressed="false" press=".onCart"></ToggleButton>
										</contentRight>
									</Bar>
								</customHeader>
								<ObjectHeader title="{Name}"
									number="{ parts:[{path:'Price'},{path:'CurrencyCode'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
									numberUnit="{CurrencyCode}" class="sapUiResponsivePadding--header">
									<statuses>
										<ObjectStatus text="{ path : 'Status', formatter : '.formatter.statusText' }"
											state="{ path : 'Status', formatter : '.formatter.statusState' }"/>
									</statuses>
									<ObjectAttribute title="Description" text="{ShortDescription}"/>
									<ObjectAttribute title="Weight" text="{Weight} {WeightUnit}"/>
									<ObjectAttribute title="Measures" text="{DimensionWidth} x {DimensionDepth} x {DimensionHeight} {Unit}"/>
								</ObjectHeader>
								<HBox justifyContent="Center" alignItems="Center">
									<Image src="{PictureUrl}" decorative="false" press="handleImage3Press"/>
								</HBox>
								<footer>
									<OverflowToolbar id="idFooter">
										<ToolbarSpacer/>
										<Button type="Emphasized" text="{i18n>AddCartButton}" press=".addToCart"/>
									</OverflowToolbar>
								</footer>
							</Page>
						</detailPages>
						<masterPages>
							<Page id="master" title=" Product Catalog" class="sapUiStdPage" showSubHeader="true">
								<headerContent>
									<Button icon="sap-icon://home" press=".backToHome"/>
								</headerContent>
								<subHeader>
									<Bar>
										<contentMiddle>
											<SearchField liveChange=".searchCategory"/>
										</contentMiddle>
									</Bar>
								</subHeader>
								<content>
									<List id="masterCategoryCatalogList" items="{/categories}" itemPress=".goToCategoryMaster" headerText="Categories">
										<items>
											<StandardListItem type="Active" title="{CategoryName}" info="{NumberOfProducts}"/>
										</items>
									</List>
								</content>
							</Page>
							<Page id="categoryMaster" title="{CategoryName}" backgroundDesign="List" class="sapUiStdPage" showNavButton="true"
								navButtonPress=".onPressMasterBack">
								<List id="categoryList" itemPress=".onCategoryListItemPress" items="{}">
									<items>
										<ObjectListItem type="Active" icon="{PictureUrl}" title="{Name}" number="{Price}" numberUnit="{CurrencyCode}" iconDensityAware="false"
											custom:to="productDetail">
											<attributes>
												<ObjectAttribute visible="true" text="{SupplierName}"/>
											</attributes>
											<firstStatus>
												<ObjectStatus text="{ path : 'Status', formatter : '.formatter.statusText' }"
													state="{ path : 'Status', formatter : '.formatter.statusState' }"/>
											</firstStatus>
										</ObjectListItem>
									</items>
								</List>
							</Page>
						</masterPages>
					</SplitApp>
					<Page id="cartDetail" class="splitterPage" visible="true" backgroundDesign="List">
						<layoutData>
							<l:SplitterLayoutData id="cartSplitor" class="sapUiNoMargin" size="25%" resizable="false"/>
						</layoutData>
						<customHeader>
							<Bar>
								<contentLeft>
									<Title level="H2" text="{i18n>CartTitle}"/>
								</contentLeft>
								<contentRight>
									<Button id="cartEditButton" icon="sap-icon://edit" press=".editCartList"/>
								</contentRight>
							</Bar>
						</customHeader>
						<List id="cartProductList" items="{/cartItems}" delete=".deleteCartItem">
							<items>
								<ObjectListItem type="Active" intro="{Quantity} x" icon="{PictureUrl}" title="{Name}" number="{Price}" numberUnit="{CurrencyCode}"
									iconDensityAware="false" custom:to="productDetail">
									<attributes>
										<ObjectAttribute visible="true" text="{SupplierName}"/>
									</attributes>
									<firstStatus>
										<ObjectStatus text="{ path : 'Status', formatter : '.formatter.statusText' }"
											state="{ path : 'Status', formatter : '.formatter.statusState' }"/>
									</firstStatus>
								</ObjectListItem>
							</items>
						</List>
						<footer>
							<OverflowToolbar id="idCartFooter">
								<Label text="Total Price: "/>
								<Text id="totalPrice" text=""/>
								<Text text="{CurrencyCode}"/>
								<ToolbarSpacer/>
								<Button id="saveEditedCart" type="Accept" visible="false" text="{i18n>save}" press=".saveCartList"/>
								<Button id="checkoutButton" type="Emphasized" text="{i18n>checkout}" press=".checkout"/>
							</OverflowToolbar>
						</footer>
